{
  "name": "hyperdash-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "commit": "git-cz",
    "build:ci": "ng build --prod hyperdash-angular && ng build --prod hyperdash-angular-app",
    "test:ci:app": "ng test hyperdash-angular-app -i --ci --no-cache",
    "test:ci:lib": "ng test hyperdash-angular -i --ci --no-cache",
    "test:ci": "npm run lint && npm run test:ci:app && npm run test:ci:lib",
    "docs": "compodoc -p projects/hyperdash-angular/tsconfig.lib.json",
    "semantic-release": "semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^11.0.5",
    "@angular/common": "^11.0.5",
    "@angular/compiler": "^11.0.5",
    "@angular/core": "^11.0.5",
    "@angular/forms": "^11.0.5",
    "@angular/platform-browser": "^11.0.5",
    "@angular/platform-browser-dynamic": "^11.0.5",
    "@angular/router": "^11.0.5",
    "@hypertrace/hyperdash": "^1.1.2",
    "core-js": "^3.8.2",
    "lodash-es": "^4.17.20",
    "rxjs": "^6.6.3",
    "tslib": "^2.1.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-builders/jest": "^11.0.0",
    "@angular-devkit/build-angular": "~0.1100.7",
    "@angular/cli": "^11.0.2",
    "@angular/compiler-cli": "^11.0.5",
    "@angular/language-service": "^11.0.2",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@compodoc/compodoc": "^1.1.11",
    "@ngneat/spectator": "^6.1.3",
    "@types/jest": "^25.0.0",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^14.14.21",
    "@types/webpack-env": "^1.15.3",
    "codelyzer": "^6.0.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "jest-junit": "^12.0.0",
    "lodash": "^4.17.20",
    "ng-packagr": "^11.1.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^17.3.1",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test:ci",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hypertrace/hyperdash-angular.git"
  },
  "publishConfig": {
    "registry": "https://api.bintray.com/npm/hypertrace/npm"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/hyperdash-angular"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
